<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha256-Ml0Z+aH2Ktgvnzgqh39Cv0R8jLspPdfNLAPPO88vFGo=" crossorigin="anonymous"></script>
<script src="/assets/libs/slick-1.8.1/slick/slick.min.js"></script>
<script>
    $(document).ready(function () {
        $('.menu-toggle').click(function () {
            let val = "0";
            if ($('.right-main-nav').hasClass("nav-open")) {
                val = "-110%";
            }
            $('.right-main-nav').toggleClass('nav-open');
            $('.right-main-nav').css("right", val);
        })
        $('.client-slider').slick({
            dots: true,
            arrows: true,
            slidesToShow: 4,
            slidesToScroll: 1,
            autoplay: false,
            autoplaySpeed: 3000,
            responsive: [{breakpoint: 992, settings: {slidesToShow: 3}}, {breakpoint: 768, settings: {slidesToShow: 1}}]
        });

        WebpIsSupported(function(isSupported){
            if(!isSupported){
                $("[data-background-image-url-fallback]" ).each(function() {
                    $(this).css('background-image', 'url(' + $(this).data('background-image-url-fallback') + ')');
                });
            }
        });
    });

    function WebpIsSupported(callback){
        if(!window.createImageBitmap){
            callback(false);
            return;
        }

        var webpdata = 'data:image/webp;base64,UklGRiQAAABXRUJQVlA4IBgAAAAwAQCdASoCAAEAAQAcJaQAA3AA/v3AgAA=';

        fetch(webpdata).then(function(response){
            return response.blob();
        }).then(function(blob){
            createImageBitmap(blob).then(function(){
                callback(true);
            }, function(){
                callback(false);
            });
        });
    }
</script>