<div class="container">
    <div class="row flex-lg-row-reverse align-items-center">
    <div class="col-10 col-sm-8 col-lg-6  my-4 my-lg-0">
        <img src="{{ entry.heroImage.one().url ?? (imagePlaceholders.heroImagePlaceholder.one().url ?? 'null') }}" class="d-block mx-lg-auto img-fluid" alt="{{ entry.heroImage.one().title ?? (imagePlaceholders.heroImagePlaceholder.one().title ?? 'null') }}">
    </div>
    <div class="col-10 col-lg-6 mt-0 my-4 my-lg-0">
        <h1 class="display-5 fw-bold lh-1 mb-3">{{ entry.heroTitle|nl2br }}</h1>
        <p class="lead mb-4">{{ entry.heroText|nl2br }}</p>
        {% set heroLinkUrl = false %}
        {% set heroLinkEntry = entry.heroButtonLink ? entry.heroButtonLink.one() : false %}
        {% if heroLinkEntry %}
            {% set heroLinkUrl = heroLinkEntry.url %}
        {% endif %}
        {% if not heroLinkUrl and entry.heroButtonStrictLink is defined and entry.heroButtonStrictLink %}
            {% set heroLinkUrl = entry.heroButtonStrictLink %}
        {% endif %}
        {% if heroLinkUrl %}
            <div class="mt-3">
                <a href="{{ heroLinkUrl }}" class="btn btn-brand btn-lg m-0 d-block d-md-inline-block">{{ entry.heroButtonText ?: 'Get Started' }}</a>
            </div>
        {% endif %}
    </div>
    </div>
</div>