<section>
    <div class="container p-3 p-md-4 p-lg-5 text-center">
        <h2 class="display-6 fw-bold lh-sm mb-3">{{ entry.reportsTitle|nl2br }}</h2>
        <p class="lead mb-4">{{ entry.reportsText|nl2br }}</p>
        {% if entry.reportsItems %}
            <div class="row">
                <div class="col col-lg-10 offset-lg-1">
                    <div class="row g-4 row-cols-1 row-cols-lg-2 justify-content-center">
                        {% set imageTransformHandle = 'reportsItemImage' %}
                        {% for item in entry.reportsItems.all() %}
                            {% set itemImage = item.image.one().getUrl(imageTransformHandle) ?? (imagePlaceholders.listItemImagePlaceholder.one().getUrl(imageTransformHandle) ?? null) %}
                            {% set transformedItemImage = itemImage ? craft.imager.transformImage(itemImage, { format: 'webp' }) : null %}
                            <div class="col">
                                <div class="card rounded-5 border p-4 p-md-5 m-0">
                                    <div class="w-25">
                                        <div class="report-img img-cover"
                                             style="background-image: url({{ transformedItemImage.url ?? null }})" data-background-image-url-fallback="{{ itemImage }}"></div>
                                    </div>
                                    <h3 class="h4 mt-3">{{ item.heading|nl2br }}</h3>
                                    <p class="lead">{{ item.text|nl2br }}</p>
                                    {% set itemLinkEntry = item.linkEntry.one() %}
                                    {% if itemLinkEntry %}
                                        <a href="{{ itemLinkEntry.url }}"
                                           class="fw-bold d-block d-md-inline-block fs-5 border-bottom text-center">{{ entry.linkText ?: 'View Sample' }}</a>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</section>