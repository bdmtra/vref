{% extends "base" %}
{% set orderSubscriptions = craft.entries.id(816).first() %}

{% block content %}
  <div class="main-banner-area">
    <div class="banner-img-wrap" style="background-image: url(assets/images/header-homepage1.jpg)">
      <div class="container">
        <div class="banner-captions">
          <h1>Aircraft Appraisals Produced By Aviation Professionals You Can Trust</h1>
          <p>
            OVER 27 YEARS OF AIRCRAFT AND ENGINE VALUATION SERVICES FOR THE INTERNATIONAL AVIATION COMMUNITY
          </p>
          <div class="btn-group">
            <a href="/shopsubscription" class="btn btn-brand">Let's Begin</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="sm-block-row pt-0">
      <div class="services-wrap flex ai-stretch">
        <div class="service-item flex">
          <figure><img src="/assets/images/sicon-flight.svg" alt="" /></figure>
          <div class="service-caprion flex">
            <div class="caption-text">
              <h4>VREF Online Software</h4>
              <h6>Real-time Online Aircraft Valuations</h6>
              <p>
                Obtain exclusive access to our aircraft value database featuring a premium selection of aircraft valuation
                data, optional equipment lists, performance data, and so much more.
              </p>
            </div>
            <div class="service-ftr">
              <a href="javascript:void(0);" class="btn btn-brand">Sign Up</a>
            </div>
          </div>
        </div>
        <div class="service-item flex">
          <figure><img src="/assets/images/sicon-screen.svg" alt="" /></figure>
          <div class="service-caprion flex">
            <div class="caption-text">
              <h4>VREF Aircraft Consulting</h4>
              <h6>USPAP Compliant Aircraft Appraisals On Demand</h6>
              <p>
                Comprehensive aircraft appraisals for all aircraft types, including business and commercial jets,
                turbine/piston helicopters, regional/commuter, and piston aircraft.
              </p>
            </div>
            <div class="service-ftr">
              <a href="javascript:void(0);" class="btn btn-brand">Request A Quote</a>
            </div>
          </div>
        </div>
        <div class="service-item flex">
          <figure><img src="/assets/images/sicon-note.svg" alt="" /></figure>
          <div class="service-caprion flex">
            <div class="caption-text">
              <h4>VREF Verified Value Reports</h4>
              <h6>Shop Smart And Get The CarfaxÂ® For Aircraft</h6>
              <p>
                Get hold of up-to-date, accurate information on an aircraft before you buy and get the answers you need to
                make an informed purchase backed by our current On-Demand Aircraft value report.
              </p>
            </div>
            <div class="service-ftr">
              <a href="javascript:void(0);" class="btn btn-brand">Access Value Report</a>
            </div>
          </div>
        </div>
        <div class="service-item flex">
          <figure><img src="/assets/images/sicon-town.svg" alt="" /></figure>
          <div class="service-caprion flex">
            <div class="caption-text">
              <h4>VREF Expert Witness</h4>
              <h6>Litigation and Expert Witness Services</h6>
              <p>
                VREF Expert Witness and Legal Services offers Litigation and Expert Witness support. VREF provides
                superior investigative skills, in-depth knowledge and expertise. Services include deposition and
                deposition support, consulting witness, and testifying in court. Our staff of appraisers have testified in
                U.S. Federal Court, are trusted by numerous Aircraft Manufactures, Banks, and the leading law firms in the
                USA.
              </p>
            </div>
            <div class="service-ftr">
              <a href="javascript:void(0);" class="btn btn-brand" [routerLink]="['/aviation-expert-witness']"
                >Find Out More...</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Begin Client Logo Section #}

  <div class="sm-block-row light-bg pt-dbl">
    <div class="container">
      <div class="title-row text-center">
        <h2>Who We've Served</h2>
        <p>Providing aircraft appraisal and valuation services for clients on a local and global level.</p>
      </div>
      <div class="clients-wrap">
        <ul id="clients-list" class="clients-logo clearfix client-logo-height">
          {% for asset in entry.clientImages.all()|sort %}
            <li>
              <a class="flex ai-center justify-content-center">
                <img class="img-style" src="{{ url(asset.getUrl(), {v: asset.dateModified.timestamp}) }}"/>
              </a>
            </li>
          {% endfor %}
        </ul>
        <div class="btn-group">
          <a id="clientId" class="btn btn-brand" href="javascript:void(0);">See More of Our Clients</a>
        </div>
      </div>
    </div>
  </div>

  {# Begin Client-Testimonial Section #}

  <div class="sm-block-row pt-dbl pb-dbl">
    <div class="container">
      <div class="title-row text-center no-subcaption">
        <h2>Aviation Consulting Services</h2>
      </div>
      <div class="row" style="display:flex;">
        <div class="col-6" style="padding:30px;">
          <h4>VREF Expert Witness</h4>
          <h6>LITIGATION AND EXPERT WITNESS SERVICES WHEN NEEDED</h6>
          <p>
            Find the support you need with our superior investigative skills, in-depth knowledge, and expertise for trial
            testimony, deposition, and corporate litigation, focusing on many aircraft-related events.
          </p>
          <a class="btn btn-brand" href="/aviation-expert-witness">Read More</a>
        </div>
        <div class="col-6" style="padding:30px;">
          <h4>Worldwide Aircraft Documentation And Recovery Services</h4>
          <h6>COMPREHENSIVE RECOVERY SUPPORT</h6>
          <p>
            Receive 24/7 emergency support as well as fast and safe aircraft recovery, including coverage of needs such as
            logistics, investigation, on-site collateral inspections, aircraft control, storage, maintenance, and more.
          </p>
          <!-- <a class="btn btn-brand" href="/aircraft-values">Learn More</a> -->
        </div>
      </div>
    </div>
  </div>

  {# Begin "As Seen On" Section #}

  <div class="sm-block-row pt-dbl pb-dbl light-bg">
    <div class="flex asseen-wrap" style="margin-bottom:90px">
      <h3>As seen on:</h3>
      <ul>
        <li>
          <a href="javascript:void(0);"><img src="/assets/images/as-seen-abc.png" alt=""/></a>
        </li>
        <li>
          <a href="javascript:void(0);"><img src="/assets/images/as-seen-cbs.png" alt=""/></a>
        </li>
        <li>
          <a href="javascript:void(0);"><img src="/assets/images/as-seen-fox.png" alt=""/></a>
        </li>
        <li>
          <a href="javascript:void(0);"><img src="/assets/images/as-seen-cnbc.png" alt=""/></a>
        </li>
      </ul>
    </div>
    <div class="container">
      <div class="col-12">
        <div class="title-row text-center no-subcaption">
          <h2>Why VREF?</h2>
        </div>
        <p>
          For over 27 years, VREF has stood as a pillar in the aviation community, regularly working with high-profile and
          smaller-scale clients. With offices located globally, VREF offers vital aircraft and engine valuation services
          through an online subscription platform. VREF is proud to be an official guide of the AOPA (Aircraft Owners and
          Pilots Association) for its valuation and appraisal services.
        </p>
      </div>
    </div>
  </div>

  {# Begin Pricing Section #}

  <div class=" block-row pb-0 vref-packege-row">
    <div class="container">
      <div class="title-row text-center white-txt">
        <h2>VREF Subscription Pricing</h2>
      </div>
    </div>
    <div class="container">
      <div class="vref-packege-wrap flex ai-stretch justify-content-center">
      {% for prod in orderSubscriptions.subscriptionPackages.all() %}
        <div class="{{ loop.index == 2 ? 'vpackege-item flex active' : 'vpackege-item flex' }}">
          <div class="vpackege-caption">
            {% if loop.index == 2 %}
              <div class="rectangle-5">Most Popular</div>
            {% endif %}
            <br />
            <h4>{{ prod.productName }}</h4>
            {% if loop.index == 2 %}
              <div class="start-at">Starting at</div>
            {% endif %}
            <p class="packege-price">
              <strong><b>$</b>{{ prod.productStartingPrice }}</strong>/ {{ prod.pricePeriod }}
            </p>
            <ol>
              <li>{{ prod.productBullet1 }}</li>
              <li>{{ prod.productBullet2 }}</li>
              <li>{{ prod.productBullet3 }}</li>
            </ol>
          </div>
          <div class="vpackege-ftr">
            {% if loop.index == 1 %}
              <a class="btn btn-brand btn-lg mt-20" href="https://values.vref.com/shopsubscription/preview?tier=not_needed">SIGN UP TODAY</a>
            {% elseif loop.index == 2 %}
              <a class="btn btn-brand btn-lg mt-20" href="https://values.vref.com/shopsubscription/preview?tier=tier_one&prod=online">SIGN UP TODAY</a>
            {% elseif loop.index == 3 %}
              <a class="btn btn-brand btn-lg mt-20" href="https://values.vref.com/shopsubscription/preview?tier=tier_one&prod=proPack">SIGN UP TODAY</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
      </div>
