  <script>
    $( document ).ready(function() {
      $('.testi-profiles').slick({
        adaptiveHeight: true,
        dots: true,
        fade: true,
        slidesToShow: 1,
        slidesToScroll: 1,
        asNavFor: '.testi-captions'
      });
      $('.testi-captions').slick({
        adaptiveHeight: true,
        slidesToShow: 1,
        slidesToScroll: 1,
        asNavFor: '.testi-profiles',
        arrows: false,
        fade: true,
