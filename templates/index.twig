  </div>

  {# Begin Comparison Section #}
  
  <div class="sm-block-row pt-dbl pb-dbl">
    <div class="container">
      <div class="col-12">
        <div class="title-row text-center no-subcaption">
          <h3>See Why VREF Is Your Go-To Choice</h3>
        </div>
        <img src="/assets/images/comp-chart.png" alt=""/>
      </div>
    </div>
  </div>

  {# Begin Client Slider Section #}

  <div class="sm-block-row pt-dbl pb-dbl light-bg">
    <div class="container">
      <div class="title-row text-center no-subcaption">
        <h2>What Our Clients Are Saying</h2>
      </div>
      <div class="testi-wrap">
        <div class="testi-slider-wrap flex">
          <div class="testi-profile-wrap">
            <div class="testi-profiles">
              {% for block in entry.testimonialGroups.all() %}
                <div class="testi-item">
                  <p>{{ block.testimonialClientName }}</p>
                  {% for asset in block.testimonialThumbnail.all() %}
                    <figure><img src="{{ url(asset.getUrl(), {v: asset.dateModified.timestamp}) }}" alt="" width="100%" /></figure>
                  {% endfor %}
                </div>
              {% endfor %}
            </div>
          </div>
          <div class="testi-caption-wrap">
            <div class="testi-captions">
              {% for block in entry.testimonialGroups.all() %}
                <div class="testi-item">
                  <div id="testimonial_">
                    <h6>{{ block.testimonialHeader }}</h6>
                    <p>{{ block.testimonialExcerpt }}</p>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Begin Newsletter Section #}

  <div class="sm-block-row pb-dbl full-mob-container">
  <div class="container">
    <div class="newsletter-wrap flex ai-center justify-content-center" style="background-image: url(assets/images/news-overlay.png);">
      <div>
        <div class="title-row white-txt text-center">
          <h3>Don't Miss Out On News & Insights</h3>
          <br />
          <p>
            Join VREF and the AOPA community for the latest information<br />
            and updates through our blogs and newsletters.
          </p>
        </div>
        <form class="newsletter-form flex ai-stretch" action="" method="post">
            {{ csrfInput() }}
            <input type="hidden" name="action" value="mailchimp-subscribe/audience/subscribe">
            {% set subscribeResponse = mailchimpSubscribe is defined and mailchimpSubscribe.action == 'subscribe' ? mailchimpSubscribe : null %}
            {% if subscribeResponse %}
                {% if not subscribeResponse.success %} <p>An error occured: {{ subscribeResponse.message }}</p> {% endif %}
            {% endif %}
            <input id="emailInput" type="email" name="email" {% if subscribeResponse and not subscribeResponse.success %}value="{{ subscribeResponse.values.email ?? '' }}"{% endif %}/>
            <input class="btn btn-lg btn-warning" type="submit" name="" value="I Want In"/>
        </form>
      </div>
    </div>
  </div>
  </div>

