{% extends "base" %}

{% block css %}
  <link rel="stylesheet" href="./assets/scss/dynamic-pages.css">
{% endblock %}

{% block content %}
  {% set image = entry.headerImage.first() %}
  <div class="inner-banner ptb-full block-row dark-bg-img lines-btm-warn" {% if image %} style="background-image:url( {{ image.getUrl() }} )" {% endif %}>
    <div class="container">
      <div class="about-half-wrap">
        <div class="title-row white-txt">
          <h1>{{ entry.pageTitle }}</h1>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="block-row">
      <div class="flex-content flex full-leftblock appraisal-wrap">
        <div class="flex-content-main">
          <div class="caption-area ml-0">{{ entry.richText }}</div>
        </div>
        <aside class="flex-content-aside">
          {% include 'partials/_sidebar' %}
          <div class="valrep-aside mt-30">
            <img class="valrep-img" src="/assets/images/vref-online-valuations.jpg" alt="" />
            <div class="valrep-caption">
              <p>Subscribe now to get full access to our complete library of current and historical aircraft data.</p>
              <a href="/shopsubscription/shop"><button type="button" class="btn btn-warning btn-block">View Subscriptions </button></a>
            </div>
          </div>
        </aside>
      </div>
    </div>

  </div>
  {% if craft.app.request.segments|first == "about" %}
    <div>
      {% include 'partials/_team' %}
    </div>
  {% endif %}
{% endblock %}