<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VREF Craft</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/assets/scripts/slick-1.8.1/slick/slick.css"/>
  <link rel="stylesheet" href="/assets/styles.css">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon.ico">
  {% block css %}
  {% endblock %}
  <script src="/assets/scripts/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
</head>

<body>

  {# Begin Header/Navbar Section #}

    <header>
      <div class="header-top-wrap">
        <div class="lg-container flex">
          <p>Questions? Call <a href="javascript:void(0)" class="call">844.303.VREF</a> | <a href="mailto:info@vref.com">info@vref.com</a></p>
          <div class="hdr-top-rpart">
            <a href="https://values.vref.com/account/aircraft-selection/list" class="btn btn-brand" id="onlineBtn">VREF Online</a>
            <ul class="header-top-menu">
              <li class="mydropdown about-us" style="filter:grayscale(100%);">
                <a class="login-btn" href="javascript:void(0);" style="color:unset;">About Us</a>
                <span class="d-desk-none mob-arrow" style="color:unset;"></span>
                <ul class="mydropdown-list">
                  <li><a href="/about">About VREF</a></li>
                  <li><a href="/b2b-solutions">B2B Solutions</a></li>
                  <li><a href="/contact">Contact</a></li>
                  <li><a href="/faq">FAQ</a></li>
                  <li><a href="/services">Services</a></li>
                </ul>
              </li>
              <li><a href="/news">News</a></li>
              {% if not currentUser %}
                <li><a class="login-btn rsidebar-toggle" href="https://values.vref.com/account/aircraft-selection/list">Login/Register</a></li>
              {% else %}
                <li class="mydropdown">
                  <a class="login-btn" href="javascript:void(0);">My Account</a>
                  <ul class="mydropdown-list myacc-dropdownmenu">
                    <li><a href="/account/overview"><i><img src="/assets/images/acc-overview.svg" alt=""/></i>Account Overview</a></li>
                    <li><a href="/account/verified-reports"><i><img src="/assets/images/acc-ver-report.svg" alt=""/></i>Verified Reports</a></li>
                    <li><a href="/account/subscriptions"><i><img src="/assets/images/subscriptions.svg" alt=""/></i>Subscriptions</a></li>
                    <li><a href="/account/order-history"><i><img src="/assets/images/order-history.svg" alt=""/></i>Order History</a></li>
                    <li><a href="/account/payment-detail"><i><img src="/assets/images/payment-details.svg" alt=""/></i>Payment Details</a></li>
                    <li><a href="/account/changePassword"><i><img src="/assets/images/cahnge-pwd.svg" alt=""/></i>Change Password</a></li>
                    <li><a href="javascript:void(0);"><i><img src="/assets/images/signout.png" alt=""/></i>Log Out</a></li>
                  </ul>
                </li>
              {% endif %}
            </ul>
          </div>
        </div>
      </div>
      <div class="header-main">
        <button type="button" class="menu-toggle">
          <span class="top-bar"></span>
          <span class="middle-bar"></span>
          <span class="bottom-bar"></span>
        </button>
        <div class="lg-container flex">
          <a href="/" class="logo"><img src="/assets/images/logo.png" alt="VREF" /></a>
          <a class="cart-icons" href="https://vref-com.myshopify.com/"><img src="/assets/images/cart-icon-white.png" alt="" /></a>
          <div class="right-main-nav flex">
            <div class="aside-main-menu">
              <ul>
                <li><a href="/account/overview"><i><img src="/assets/images/acc-overview.svg" alt=""/></i>Account Overview</a></li>
                <li><a href="/account/verified-reports"><i><img src="/assets/images/acc-ver-report.svg" alt=""/></i>Verified Reports</a></li>
                <li><a href="/account/subscriptions"><i><img src="/assets/images/subscriptions.svg" alt=""/></i>Subscriptions</a></li>
                <li><a href="/account/order-history"><i><img src="/assets/images/order-history.svg" alt=""/></i>Order History</a></li>
                <li><a href="/account/payment-detail"><i><img src="/assets/images/payment-details.svg" alt=""/></i>Payment Details</a></li>
                <li><a href="/account/changePassword"><i><img src="/assets/images/cahnge-pwd.svg" alt=""/></i>Change Password</a></li>
              </ul>
            </div>
            <nav>
              <ul>
                <li><a href="/aircraft-values">Aircraft Value Guides</a></li>
                <li class="dropdown">
                  <a href="javascript:void(0);">Aircraft Appraisals</a>
                  <span class="menu-arrow"></span>
                  <ul class="sub-menu">
                    <li><a href="/aircraft-appraisals">Aircraft Appraisal Services</a></li>
                    <li><a href="/aircraft-appraisals/faq"> Aircraft Appraisal FAQ</a></li>
                    <li><a href="/aircraft-appraisals/uspap">USPAP Appraisal Standards</a></li>
                    <li><a href="/aircraft-appraisals/asa">ASA Appraisal Standards</a></li>
                  </ul>
                </li>
                <li class="dropdown">
                  <a href="javascript:void(0);">Aircraft Value Reports</a>
                  <span class="menu-arrow"></span>
                  <ul class="sub-menu">
                    <li><a href="/aircraft-values/verified">Verified Value Reports</a></li>
                    <li><a href="/aircraft-values/residual">Residual Value Reports</a></li>
                  </ul>
                </li>
                <li><a href="/aviation-expert-witness">Aviation Expert Witness</a></li>
                <li><a href="/aviation-blockchain">VREF Vault</a></li>
              </ul>
            </nav>
            <ul class="cart-menu">
              <li><a href="/shopsubscription/">Order Subscriptions</a></li>
              <li><a href="https://vref-com.myshopify.com/">Store</a></li>
            </ul>
          </div>
        </div>
      </div>
    </header>

  {# Begin Login/Signup/Forgot password/Reset password Section #}

    <div class="rsidebar-wrap">
      <div class="rsidebar-inner flex">
        <div class="rsidebar-header">
          <a class="close-rsidebar rsidebar-toggle"><img src="/assets/images/close-icon-white.png" alt=""/></a>
        </div>
        <div class="rsidebar-content flex">
          <app-login class="form-wrap"></app-login>
          <app-sign-up class="form-wrap"></app-sign-up>
          <app-forgot-password class="form-wrap"></app-forgot-password>
          <app-reset-password class="form-wrap"></app-reset-password>
        </div>
      </div>
    </div>
  
  {# Begin Content Section #}
  
    {% block content %}
    {% endblock %}

  {# Begin Advertising Section #}
    {% if not craft.app.request.segments|first == "contact" %}
      <div class="block-row pb-0">
        <div class="adds-row dark-bg sm-block-row pt-0 pb-dbl">
          <div class="container">
            <div class="title-row white-txt">
              <h4>Our Advertisers</h4>
            </div>
            <div class="adds-wrap">
              <div class="client-slider">
                {% for asset in craft.assets().volume('ourAdvertisers').all() %}
                  <div>
                    <a class="client-slide-img" target="_blank" href=""><img src="/assets/images/advertisers/{{ asset.filename }}" alt="" title="" /></a>
                  </div>
                {% endfor %}
              <div>
            </div>
          </div>
        </div>
      </div>
    {% endif %}

  {# Begin Footer Section #}
    {% include 'partials/_footer' %}
  {# Begin Script Section #}
    <script src="/assets/scripts/slick-1.8.1/slick/slick.min.js"></script>
    <script>
      $( document ).ready(function() {
        $('.rsidebar-toggle').click(function() {
          $('.rsidebar-wrap').toggleClass('rsidebar-open');
        })
        $('.client-slider').slick({
          dots: true,
          arrows: true,
          slidesToShow: 4,
          slidesToScroll: 1,
          autoplay: false,
          autoplaySpeed: 3000,
          responsive: [ { breakpoint: 992, settings: { slidesToShow: 3 } }, { breakpoint: 768, settings: { slidesToShow: 1 } } ]
        });
      })
    </script>

</body>


</html>