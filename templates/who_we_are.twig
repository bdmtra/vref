{% extends "base" %}

{% block content %}

    {% include 'partials/sections/_hero-no-image' %}
    <div class="border-bottom"></div>
    {% include 'partials/sections/_services' with { offset: 1, items: entry.offeringList.all()} %}
    <div class="border-bottom"></div>
    <div class="container px-4 py-5">
        <h2 class="pb-2 text-center">{{ entry.valuesTitle|nl2br}}</h2>
        <p class="lead text-center">{{ entry.valuesText|nl2br}}</p>
        {% if entry.valuesItems %}
            <div class="row g-4 pt-5 row-cols-1 row-cols-lg-2">
                {% for item in entry.valuesItems.all() %}
                    <div class="col">
                        <div class="card rounded-5 border p-4 p-lg-5">
                            <div class="row align-items-center">
                                <div class="col-2">
                                    {% set itemImageAsset =  item.image.one() %}
                                    {% if itemImageAsset %}
                                        <div class="value-img">
                                            <img src="{{ itemImageAsset.getUrl('valuesItemImage') }}" class="img-fluid h-100">
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="col-10">
                                    <h3 class="h4 m-0">{{ item.heading|nl2br }}</h3>
                                </div>
                            </div>
                            <p class="mt-3">{{ item.text|nl2br }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="border-bottom"></div>
    {% include 'partials/sections/_services' with { items: entry.expertiseList.all()} %}
    <div class="border-bottom"></div>
    <div class="container px-4 py-5">
        <h2 class="pb-2 text-center">{{ entry.teamMembersTitle|nl2br }}</h2>
        <p class="lead text-center">{{ entry.teamMembersText|nl2br }}</p>
        {% if entry.teamMembersList %}
            <div class="row g-4 pt-5 row-cols-2 row-cols-md-3 row-cols-lg-5">
                {% for item in entry.teamMembersList.all() %}
                    <div class="col">
                        <div class="card card-team-member rounded-5 border h-100">
                            {% set itemImageAsset =  item.profilePicture.one() %}
                            {% if itemImageAsset %}
                                <div class="w-100">
                                    <img src="{{ itemImageAsset.getUrl('teamMembersItemImage') }}" class="img-fluid mb-3">
                                </div>
                            {% endif %}
                            <h3 class="h4 mb-3 px-3 text-center lh-sm team-member-title">{{ item.title|trim|replace(' ', '<br>')|raw }}</h3>
                            <h4 class="h5 mb-3 px-3 text-center lh-sm team-member-designation">{{ item.personDesignation }}</h4>
                            <div>
                                <a href="{{item.url}}" class="fs-5 border-bottom">Read Bio</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

{% endblock %}