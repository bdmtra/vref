{% extends "base" %}

{% block content %}
    
{% set default_users_number = 23 %}
{% set default_copies_number = 1 %}
{% include 'partials/sections/_hero-no-image' %}
<div class="border-bottom"></div>
<div class="container">
    <ul class="nav justify-content-center mb-4">
        <li class="nav-item">
            <a class="nav-link fs-6 active" data-bs-toggle="tab" data-bs-target="#vref-online-tab-pane" role="tab" aria-controls="vref-online-tab-pane" aria-selected="true">VREF Online</a>
        </li>
        <li class="nav-item">
            <a class="nav-link fs-6" data-bs-toggle="tab" data-bs-target="#vref-print-tab-pane" role="tab" aria-controls="vref-print-tab-pane" aria-selected="false">VREF Print</a>
        </li>
        <li class="nav-item">
            <a class="nav-link fs-6" data-bs-toggle="tab" data-bs-target="#certificate-tab-pane" role="tab" aria-controls="certificate-tab-pane" aria-selected="false">Certificate</a>
        </li>
        <li class="nav-item">
            <a class="nav-link fs-6" data-bs-toggle="tab" data-bs-target="#consulting-tab-pane" role="tab" aria-controls="consulting-tab-pane" aria-selected="false">Consulting</a>
        </li>
    </ul>
</div>
<div class="border-bottom"></div>
<div class="container">
    <div class="tab-content py-5">
        <div class="tab-pane fade show active" id="vref-online-tab-pane">
            <h2 class="mb-4 text-center">{{ entry.vrefOnlinePricingTitle|nl2br}}</h2>
            <p class="fs-6 mb-4 pb-3 text-center">{{ entry.vrefOnlinePricingText|nl2br}}</p>
            <div class="row row-cols-1 row-cols-lg-2">
                {% for item in entry.vrefOnlinePricingItems.all() %}
                    <div class="col mb-4">
                        <div class="card card-product p-5 m-0">
                            <h2 class="fs-4 mb-3 text-center lh-sm">{{ item.heading|nl2br }}</h2>
                            <p class="mb-3 text-center fs-6">{{ item.text|nl2br }}</p>
                            <div class="input-group mb-3 w-50">
                                <input type="number" class="form-control" value="{{ default_users_number }}" placeholder="{{ default_users_number }}">
                                <label class="input-group-text m-0" min="1" max="100">Users</label>
                            </div>
                            <p class="mb-3 text-center fs-6">{{ item.textSecondary|nl2br }}</p>
                            <div class="d-flex mb-3 justify-content-center input-group-radio-buttons">
                                <input type="radio" class="btn-check" id="payment_method_{{ item.id }}_monthly" autocomplete="off" name="payment_period_{{ item.id }}" value="1">
                                <label class="btn btn-brand btn-first" for="payment_method_{{ item.id }}_monthly">Pay Monthly</label>
                                <input type="radio" class="btn-check" id="payment_method_{{ item.id }}_annual" autocomplete="off" name="payment_period_{{ item.id }}" value="2" checked>
                                <label class="btn btn-brand btn-last" for="payment_method_{{ item.id }}_annual">Pay Upfront</label>
                            </div>

                            <div class="input-group mb-3 justify-content-center">
                                <button class="btn btn-brand" type="button">Buy now</button>
                            </div>
                            <p class="fs-5 fw-bold text-start mt-0 mb-4 w-100">Includes</p>
                            <ul class="m-0 p-0">
                                {% for include in item.includes|split('\n') %}
                                <li>{{ include }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div> 
                {% endfor %}
            </div>
        </div>
        <div class="tab-pane fade" id="vref-print-tab-pane"></div>
        <div class="tab-pane fade" id="certificate-tab-pane"></div>
        <div class="tab-pane fade" id="consulting-tab-pane"></div>
    </div>
</div>
<div class="border-bottom"></div>
{% include 'partials/sections/_services' %}
<div class="border-bottom"></div>
<div class="container py-5">
    <h2 class="mb-5 text-center">{{ entry.pricingCalculatorTitle|nl2br }}</h2>
    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card p-4 m-0">
                <div class="row">
                    <div class="col col-lg-12">
                        <h3 class="fs-5 mb-3">Select plan</h3>
                    </div>
                </div>
                <ul class="nav nav-pills nav-justified nav-price-plan m-0">
                    <li class="nav-item">
                        <a class="nav-link fs-6 active" data-bs-toggle="tab" data-bs-target="#price-plan-basic-tab-pane" role="tab" aria-controls="price-plan-basic-tab-pane" aria-selected="true"><b>Basic plan</b><span>$125/Mo</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fs-6" data-bs-toggle="tab" data-bs-target="#price-plan-pro-tab-pane" role="tab" aria-controls="price-plan-pro-tab-pane" aria-selected="false"><b>Pro plan</b><span>$200/Mo</span></a>
                    </li>
                </ul>
                <div class="tab-content m-0">
                    <div class="tab-pane fade show active" id="price-plan-basic-tab-pane">
                        <div class="row row-cols-1 row-cols-lg-2 align-items-center">
                            <div class="col col-lg-9">
                                <h3 class="fs-5 my-3">Users</h3>
                            </div>
                            <div class="col col-lg-3">
                                <input class="form-control my-3 price-plan-users-number" id="price-plan-users-field" type="number" placeholder="{{ default_users_number }}" value="{{ default_users_number }}" min="1" max="100">
                            </div>
                        </div>
                        <input type="range" class="form-range" min="1" max="100" id="price-plan-users-range">
                        <div class="row row-cols-1 row-cols-lg-2 align-items-center">
                            <div class="col col-lg-9">
                                <h3 class="fs-5 my-3">Add-ons</h3>
                            </div>
                            <div class="col col-lg-3 text-end">
                                <a class="fs-1 p-2 pr-0">-</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="card card-price-plan-addon p-4 m-0">
                                    <div class="row row-cols-1 row-cols-lg-2 align-items-center">
                                        <div class="col col-lg-9">
                                            <h4 class="m-0">VREF Print Subscription</h4>
                                        </div>
                                        <div class="col col-lg-3">
                                            <div class="input-group">
                                                <input type="number" class="form-control price-plan-copies-number" value="{{ default_copies_number }}" placeholder="{{ default_copies_number }}" id="price-plan-copies-field" min="1">
                                                <label class="input-group-text m-0">Copies</label>
                                            </div>
                                        </div>
                                    </div>
                                    <p class="lead m-0 mt-2 text-start d-block">$400/Copy</p>
                                    <p class="m-0 mt-4 text-start d-block">Lorem Ipsum is simply dummy text of the printing and typesetting</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="price-plan-pro-tab-pane">2</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4">
            <div class="card p-4 m-0">
                <div class="d-flex mb-3 justify-content-center input-group-radio-buttons">
                    <input type="radio" class="btn-check" id="calculator_payment_method_monthly" autocomplete="off" name="payment_period" value="1">
                    <label class="btn btn-brand btn-first" for="calculator_payment_method_monthly">Pay Monthly</label>
                    <input type="radio" class="btn-check" id="calculator_payment_method_annual" autocomplete="off" name="payment_period" value="2" checked>
                    <label class="btn btn-brand btn-last" for="calculator_payment_method_annual">Pay Upfront</label>
                </div>

                <div class="my-3 text-center">
                    <div class="fs-4 fw-bold">$100/Mo</div>
                    <p class="lead">Bill at $1,200 year</p>
                </div>
                <div class="card card-bg-secondary p-3 w-100 text-start">
                    <div class="fs-4 fw-bold m-0">Basic plan</div>
                    <p class="lead m-0">$125/Mo | <span class="price-plan-users-text">{{ default_users_number}}</span> users</p>
                </div>
                <div class="card card-bg-secondary p-3 w-100 text-start">
                    <div class="fs-4 fw-bold m-0">VREF Print</div>
                    <p class="lead m-0">$400/Copy | <span class="price-plan-copies-text">{{ default_copies_number}}</span> copies</p>
                </div>
                <div class="input-group mb-3 justify-content-center">
                    <button class="btn btn-brand" type="button">Buy now</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var usersRange = document.getElementById('price-plan-users-range');
    var usersField = document.getElementById('price-plan-users-field');
    var usersText = document.querySelector('.price-plan-users-text');

    usersRange.addEventListener('input', function (e) {
        usersField.value = e.target.value;
        usersText.innerHTML = e.target.value;
    });
    usersField.addEventListener('input', function (e) {
        usersRange.value = e.target.value;
        usersText.innerHTML = e.target.value;
    });


    var copiesField = document.getElementById('price-plan-copies-field');
    var copiesText = document.querySelector('.price-plan-copies-text');

    copiesField.addEventListener('input', function (e) {
        copiesText.innerHTML = e.target.value;
    });
</script>
{% endblock %}